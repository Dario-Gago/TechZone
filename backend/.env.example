# Puerto del servidor
PORT=3000

# Configuración de Base de Datos PostgreSQL
DB_HOST=localhost
DB_USER=tu_usuario_postgres
DB_NAME=techzone_db
DB_PASSWORD=tu_contraseña_segura
DB_PORT=5432

# Variable alternativa para servicios en la nube (Render)
DATABASE_URL=postgresql://usuario:password@host:5432/database_name

# Environment
NODE_ENV=development

# JWT Configuration (GENERAR NUEVA CLAVE SECRETA)
JWT_SECRET=tu_clave_jwt_muy_segura_aqui_usar_generador
JWT_EXPIRE=1d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# INSTRUCCIONES:
# 1. Copia este archivo como .env
# 2. Reemplaza todos los valores por los reales
# 3. Para JWT_SECRET usa: openssl rand -hex 64
# 4. NUNCA subas el archivo .env real a git
# 5. Para producción, configura NODE_ENV=production
